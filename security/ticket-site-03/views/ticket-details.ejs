<!DOCTYPE html>
<html>
<head>
    <title>Ticket Details</title>
    <style>
        #root {
            max-width: 1280px;
            margin: 4rem 1rem 0 1rem;
            padding: 2rem;
            }

            .tickets-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
            }

            .ticket-card {
            display: flex;
            gap: 20px;
            cursor: pointer;
            transition: transform 0.2s;
            text-align: left;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            }

            .ticket-card img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            }

            .ticket-card .content {
            flex: 1;
            }

            .ticket-card:hover {
            transform: translateY(-5px);
            }

            .ticket-card h2 {
            margin: 0 0 10px 0;
            }

            .ticket-card p {
            margin: 5px 0;
            }

            .ticket-details {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            text-align: left;
            display: flex !important;
            flex-direction: row !important;
            align-items: flex-start !important;
            gap: 40px;
            position: relative;
            }

            .ticket-details .image-container {
            width: 400px;
            min-width: 400px;
            max-width: 400px;
            }

            .ticket-details img {
            width: 100%;
            height: auto;
            object-fit: cover;
            }

            .ticket-details .content {
            flex: 1;
            width: calc(100% - 440px);
            }

            .ticket-details > * {
            margin: 0;
            padding: 0;
            }

            .ticket-details .price {
            font-size: 2rem;
            position: absolute;
            right: 20px;
            top: 20px;
            }

            .ticket-details h1 {
            font-size: 2.5rem;
            margin: 1rem 0;
            font-weight: bold;
            }

            .ticket-details .date {
            font-style: italic;
            font-size: 1.2rem;
            margin-bottom: 1rem;
            }

            .ticket-details .venue {
            font-size: 2rem;
            margin: 1rem 0;
            font-weight: normal;
            }

            .ticket-details .description {
            font-size: 1.2rem;
            margin: 1.5rem 0;
            }

            .ticket-details button {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            margin-top: 1rem;
            cursor: pointer;
            }

            .button-container {
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 1rem;
            }

            .back-button {
            padding: 10px 25px;
            margin-left: 2rem;
            font-size: 1.1rem;
            background-color: #f0f0f0;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 5px;
            transition: background-color 0.2s;
            color: #000;
            }

            .ticket-details .back-button:hover {
            background-color: #e0e0e0;
            }

            .add-to-cart {
            padding: 10px 25px;
            margin-left: 2rem;
            background-color: #0000ff;
            }

    </style>
</head>
<body>
    <div class="ticket-details">
        <div class="image-container">
            <img src="<%= ticket.imageUrl %>" alt="<%= ticket.title %>">
        </div>
        <div class="content">
            <h1><%= ticket.title %></h1>
            <p><%= ticket.description %></p>
            <p>Price: $<%= ticket.price %></p>
            
            <div class="button-container"><button id="addToCartBtn" data-ticket-id="<%= ticket.id %>">Add To Cart</button></div>
        </div>
    </div>
    
    <a href="/tickets" class="back-button">Back to Tickets</a>

    <script nonce="<%= locals.nonce %>">
        document.getElementById('addToCartBtn').addEventListener('click', async () => {
            const ticketId = document.getElementById('addToCartBtn').dataset.ticketId;
            try {
                const response = await fetch(`/cart/${ticketId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                if (response.ok) {
                    alert('Ticket added to cart successfully!');
                } else {
                    alert('Failed to add ticket to cart');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to add ticket to cart');
            }
        });
    </script>
</body>
</html>